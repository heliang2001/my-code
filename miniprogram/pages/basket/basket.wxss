@import '../../assets/fonts/iconfont.wxss';
.container{
background-color: #f0f0f0;
}
/* <!-- 购物车商品列表 -->*/
.m-cartGroup {
    background-color: #fff;
    margin-bottom: 22rpx;
    padding-left: 115rpx;
    overflow: hidden;
    margin-top:20rpx;
}

.m-cartGroup .item {
    border-bottom: 1px solid #d9d9d9;
    user-select: none;
}

.m-cartGroup .inner {
    width: 100%;
    height: 206rpx;
    position: relative;
    left: 0;
}

.m-cartGroup .m-good {
    display: flex;
    align-items: center;
    height: 206rpx;
}
.incon-checked{
    position: absolute;
    left: -90rpx;
    /* top: 40%;
    bottom: 40%; */
}

.m-cartGroup .imgWrap {
    background-color: #f4f4f4;
    border-radius: 4px;
    margin-right: 20rpx;
    position: relative;
}

.m-cartGroup .imgWrap image {
    width: 160rpx;
    height: 160rpx;
    display: block;
}

.m-cartGroup .cnt {
    height: 160rpx;
    line-height:30rpx;
    margin-right: 20rpx;
}

.m-cartGroup .cnt .line1 {
    line-height: 32rpx;
    font-size: 27rpx;
    margin-bottom: 9rpx;
    overflow: hidden;
}

.m-cartGroup .cnt .line2 {
    font-size: 24rpx;
    line-height: 32rpx;
    margin-bottom: 8rpx;
    color: #666;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    margin-bottom: 27rpx;
}

.m-cartGroup .cnt .line3 {
    font-size: 27rpx;
    line-height: 32rpx;
    color: red;
}

/* 待购数量按钮 */
.m-cartGroup .m-selnum {
    position: absolute;
    bottom: 41rpx;
    right: 22rpx;
    display: flex;
    width: 160rpx;
    justify-content: space-between;
    text-align:center
}

.m-cartGroup .m-selnum .less, .m-cartGroup .m-selnum .plus {
    width: 46rpx;
    height: 51rpx;
    background-color: #f7f7f7;
}

.m-cartGroup .m-selnum .txt {
    line-height: 50rpx;
    height:50rpx;
    width: 60rpx;
    background-color: #f7f7f7;
    
}

/* 底部下单框 */
.m-cartFT {
    height: 100rpx;
    width: 100%;
    display: flex;
    position: fixed;
    
    left: 0;
    bottom:0;
    background-color: #fff;
}

.m-cartFT .left {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.m-cartFT .right {
    width: 225rpx;
    text-align: center;
}


.m-cartFT .checkAll {
    line-height: 41rpx;
    margin-left: 22rpx;
    display: flex;
    align-items: center;
}

.m-cartFT .checkAll .txt {
    font-size: 26rpx;
    color: #666;
    margin-left: 15rpx;
    margin-top: 0.0150rpx;
}

.m-cartFT .price {
    font-size: 30rpx;
    color: #db2929;
    margin-right: 22rpx;
}

.m-cartFT .prefer {
    font-size: 24rpx;
}

.m-cartFT .w-button {
    margin-top: 0;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #b4282d;
    color: #fff;
    font-size: 24rpx;
}